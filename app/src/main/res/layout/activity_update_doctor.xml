<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".UpdateDoctorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark"
        android:orientation="vertical"
        android:padding="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Doctor details"
        android:textStyle="bold"
        android:background="@drawable/text2_rounded"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/white"

        >
        <EditText
            android:id="@+id/updatenamedoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Update Name"
            android:textColorHint="@color/white"
            android:background="@drawable/text_rounded"
            android:ems="10"
            android:padding="10dp"
            android:inputType="text"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            >
            <EditText
                android:id="@+id/docmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input Mail-ID to update password"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            >
            <EditText
                android:id="@+id/docoldpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Old Password"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/white"
        >
        <EditText
            android:id="@+id/docpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Update Password"
            android:textColorHint="@color/white"
            android:background="@drawable/text_rounded"
            android:ems="10"
            android:padding="10dp"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/white"
        >
        <EditText
            android:id="@+id/docconpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:textColorHint="@color/white"
            android:background="@drawable/text_rounded"
            android:ems="10"
            android:padding="10dp"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/white"
        >
        <EditText
            android:id="@+id/updatedescdoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Update Description"
            android:textColorHint="@color/white"
            android:background="@drawable/text_rounded"
            android:ems="10"
            android:padding="10dp"
            android:inputType="text"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />
    </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btnUpdateSpecialty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="left"
            android:background="@drawable/text2_rounded"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:text="Choose Specialty"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark"
            android:padding="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:text="Selected items: "
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvItemSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="15sp"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            >
            <EditText
                android:id="@+id/updatehosdoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Chamber/Hospital Name"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text2_rounded"
            android:padding="10dp"
            android:text="Update Hospital/Chamber Location"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/location_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:entries="@array/Location_Types"
            android:padding="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text2_rounded"
            android:padding="10dp"
            android:text="Check to update working days with respective shifts"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Per appointment time- 15 minutes"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Per shift 5 hours"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/text_rounded"
            android:padding="5dp">
            <CheckBox
                android:id="@+id/Saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saturday"
                android:textSize="15dp"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/SaturdayMorning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning"
                android:textSize="15dp"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/SaturdayEvening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening"
                android:textSize="15dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/text_rounded"
            android:padding="5dp"
            android:layout_marginTop="10dp">
            <CheckBox
                android:id="@+id/Sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunday"
                android:textSize="15dp"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/SundayMorning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning"
                android:textSize="15dp"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/SundayEvening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening"
                android:textSize="15dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/text_rounded"
            android:padding="5dp"
            android:layout_marginTop="10dp">
            <CheckBox
                android:id="@+id/Monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textSize="15dp"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/MondayMorning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning"
                android:textSize="15dp"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/MondayEvening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening"
                android:textSize="15dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/text_rounded"
            android:padding="5dp"
            android:layout_marginTop="10dp">
            <CheckBox
                android:id="@+id/Tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday"
                android:textSize="15dp"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/TuesdayMorning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning"
                android:textSize="15dp"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/TuesdayEvening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening"
                android:textSize="15dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/text_rounded"
            android:padding="5dp"
            android:layout_marginTop="10dp">
            <CheckBox
                android:id="@+id/Wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                android:textSize="15dp"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/WednesdayMorning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning"
                android:textSize="15dp"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/WednesdayEvening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening"
                android:textSize="15dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/text_rounded"
            android:padding="5dp"
            android:layout_marginTop="10dp">
            <CheckBox
                android:id="@+id/Thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thursday"
                android:textSize="15dp"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/ThursdayMorning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning"
                android:textSize="15dp"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/ThursdayEvening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening"
                android:textSize="15dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/text_rounded"
            android:padding="5dp"
            android:layout_marginTop="10dp">
            <CheckBox
                android:id="@+id/Friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday"
                android:textSize="15dp"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/FridayMorning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning"
                android:textSize="15dp"
                android:textColor="@color/white"/>
            <CheckBox
                android:id="@+id/FridayEvening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening"
                android:textSize="15dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <Button
            android:id="@+id/doctorUpdate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginTop="20sp"
            android:background="@drawable/button_rounded"
            />
    </LinearLayout>

</ScrollView>