<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:gravity="center"
    android:padding="30dp"
    tools:context=".HospitalMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/hospitalprofilebutton"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:background="@drawable/button_rounded"
            android:onClick="hospitalprofilebutton"
            android:padding="30dp"

            android:text="PROFILE"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/hospitalupdatebutton"
            android:layout_width="wrap_content"
            android:layout_height="106dp"
            android:layout_margin="15dp"
            android:background="@drawable/button_rounded"
            android:onClick="hospitalupdatebutton"
            android:padding="30dp"
            android:text="UPDATE"
            android:textColor="@color/white"

            android:textSize="22sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/addDoctorbutton"
            android:layout_width="150dp"
            android:layout_height="105dp"
            android:background="@drawable/button_rounded"
            android:onClick="addDoctorbutton"
            android:padding="30dp"
            android:text="ADD DOCTOR"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/hospitalLogoutbutton"
            android:layout_width="wrap_content"
            android:layout_height="101dp"
            android:layout_margin="15dp"
            android:background="@drawable/button_rounded"
            android:onClick="hospitalLogoutbutton"
            android:padding="30dp"
            android:text="LOGOUT"
            android:textColor="@color/white"

            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>