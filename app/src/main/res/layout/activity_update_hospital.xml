<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".UpdateHospitalActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Organization details"
            android:textStyle="bold"
            android:background="@drawable/text2_rounded"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"

            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Name"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Password"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Description"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Hotline"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="phone"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Location"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="phone"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text2_rounded"
            android:padding="10dp"
            android:text="Update Departments"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_anesthetics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anesthetics"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/check_cardiology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardiology"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_ent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENT"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/check_gastroenterology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gastroenterology"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_surgery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surgery"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/check_gynecology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gynecology"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_hematology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hematology"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/check_neurology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neurology"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_nutrition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nutrition"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/check_orthopedix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orthopedix"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_physiotherapy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Physiotherapy"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/check_renal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Renal"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_urology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urology"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>


        <Button
            android:id="@+id/hospitalUpdate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginTop="20sp"
            android:background="@drawable/button_rounded"
            />
    </LinearLayout>



</ScrollView>