<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".UpdateHospitalActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Organization details"
            android:textStyle="bold"
            android:background="@drawable/text2_rounded"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"

            >
            <EditText
                android:id="@+id/updatehosname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Name"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            >
            <EditText
                android:id="@+id/hosmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input Mail-ID to update password"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            >
            <EditText
                android:id="@+id/hosoldpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Old Password"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            >
            <EditText
                android:id="@+id/hosnewpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Password"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            >
            <EditText
                android:id="@+id/hosconpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            >
            <EditText
                android:id="@+id/updatehosdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Description"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            >
            <EditText
                android:id="@+id/updatehosyear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Foundation Year"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="phone"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            >
            <EditText
                android:id="@+id/updatehoshotline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Hotline"
                android:textColorHint="@color/white"
                android:background="@drawable/text_rounded"
                android:ems="10"
                android:padding="10dp"
                android:inputType="phone"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text2_rounded"
            android:padding="10dp"
            android:text="Update Hospital Type"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/hospital_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:entries="@array/Hospital_Types"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text2_rounded"
            android:padding="10dp"
            android:text="Update Hospital Location"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/location_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:entries="@array/Location_Types"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnUpdateDeptunit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="left"
            android:background="@drawable/text2_rounded"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:text="Update Departments and Units"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark"
            android:padding="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:text="Selected items: "
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvItemSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="15sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/hospitalUpdate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginTop="20sp"
            android:background="@drawable/button_rounded"
            />
    </LinearLayout>



</ScrollView>